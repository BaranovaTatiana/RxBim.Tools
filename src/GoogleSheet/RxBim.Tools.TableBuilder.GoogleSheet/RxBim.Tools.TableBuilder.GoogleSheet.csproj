<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PlatformTarget>x64</PlatformTarget>
        <AssemblyName>$(MSBuildProjectName).$(Version)</AssemblyName>
        <RootNamespace>RxBim.Tools.TableBuilder</RootNamespace>
        <UseDi>true</UseDi>
    </PropertyGroup>

    <PropertyGroup>
        <Description>Contains RxBim.TableBuilder converters from an Google Sheet workbook.</Description>
        <PackageId>$(MSBuildProjectName)</PackageId>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Google.Apis.Sheets.v4" Version="1.30.0.1064" />
        <PackageReference Update="RxBim.Di" Version="1.2.1-rc001" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Core\RxBim.Tools.TableBuilder\RxBim.Tools.TableBuilder.csproj" />
    </ItemGroup>

</Project>